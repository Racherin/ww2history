<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"


        android:layout_width="match_parent"
        android:layout_height="101dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_equipmentlist"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_equipmentlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battleships"
                    android:textSize="16sp"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="16dp"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
   android:orientation="vertical"                     android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_view_equipmentcountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United States"
                        android:textSize="16sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="16dp"
                        />
                    <TextView
                        android:id="@+id/text_view_equipmentrole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Single Engine Fighter"
                        android:textSize="16sp"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="16dp"
                        />
                       </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>