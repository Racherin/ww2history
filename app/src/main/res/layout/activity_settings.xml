<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsActivity"
    android:orientation="vertical"
    android:padding="8dp"
    >
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/backsettings"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Settings"
        android:gravity="center"
        android:textStyle="bold"
        />


    <LinearLayout
        android:padding="12dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Enable / Disable Notifications"/>
        <com.polyak.iconswitch.IconSwitch
            android:id="@+id/switchnotifications"
            android:layout_marginLeft="30dp"
            app:isw_background_color="@color/colorPrimary"
            app:isw_thumb_color_left="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isw_icon_size="10dp"></com.polyak.iconswitch.IconSwitch>
    </LinearLayout>
    <LinearLayout
        android:padding="12dp"

        android:onClick="rateMe"
        android:id="@+id/rate"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Rate our Application"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="20dp"
            android:layout_marginLeft="110dp"
            android:layout_height="20dp"
            android:src="@drawable/checked"

            />

    </LinearLayout>

</LinearLayout>